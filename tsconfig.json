{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "errors/*": ["errors/*"],
      "lib/*": ["lib/*"],
      "middlewares/*": ["middlewares/*"],
      "root/*": ["*"],
      "routes/*": ["routes/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./src/__tests__"],
  "lib": ["es2015"]
}
